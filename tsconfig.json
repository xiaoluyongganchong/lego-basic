{
  "compilerOptions": {
     "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "jsx":"preserve",
    "skipLibCheck": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "vite-plugin-eslint": ["types/vite-plugin-eslint.d.ts"]
    },
    "lib": ["ESNext", "DOM"],
     "types": ["vite/client", "vitest/globals", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/store/**/*.ts", "tests/**/*.ts"]

}
