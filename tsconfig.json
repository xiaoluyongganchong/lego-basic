{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "types": ["vue"],
    "lib": ["ESNext", "DOM"],
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src"]
}
